{
	"id": "tests/",
	"type": "object",
	"properties": {
		"users": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"type": "object",
					"properties": {
						"user": { "$ref": "common/schemas/user.schema.json#/definitions/name" },
						"groups": {
							"type": "array",
							"items": { "$ref": "common/schemas/user.schema.json#/definitions/group" }
						}
					},
					"required": ["user", "groups"],
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
	},
	"required": ["users"],
	"additionalProperties": false
}
