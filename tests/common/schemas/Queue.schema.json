{
	"definitions": {
		"owner": { "$ref": "User.schema.json#/definitions/name" },
		"slides": {
			"type": "array",
			"items": { "$ref": "Slide.schema.json#/definitions/id" }
		},
		"name": {
			"type": "string",
			"pattern": "^[A-Za-z0-9_-]+$",
			"minLength": 1
		}
	},

	"type": "object",
	"properties": {
		"owner": { "$ref": "#/definitions/owner" },
		"slides": { "$ref": "#/definitions/slides" }
	},
	"required": ["owner", "slides"],
	"additionalProperties": false
}
